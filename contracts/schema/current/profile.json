{
  "schema_version": "1.0.0",
  "title": "Profile Birth Data Response Schema",
  "type": "object",
  "required": ["ok", "birth_data"],
  "properties": {
    "ok": {
      "type": "boolean",
      "description": "Request success indicator"
    },
    "birth_data": {
      "type": "object",
      "required": ["date", "time", "location", "latitude", "longitude", "timezone"],
      "properties": {
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Birth date in YYYY-MM-DD format"
        },
        "time": {
          "type": "string",
          "pattern": "^\\d{2}:\\d{2}(:\\d{2})?$",
          "description": "Birth time in HH:MM or HH:MM:SS format"
        },
        "location": {
          "type": "string",
          "description": "Human-readable birth location"
        },
        "latitude": {
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "description": "Birth location latitude"
        },
        "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "description": "Birth location longitude"
        },
        "timezone": {
          "type": "string",
          "description": "IANA timezone identifier"
        }
      }
    }
  }
}

